[Unit]
Description=Mayordomo - Sistema de Ejecuci√≥n de Comandos Privilegiados
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/var/www/html-static/api
EnvironmentFile=/etc/environment
Environment="PYTHONUNBUFFERED=1"
ExecStart=/usr/bin/python3 -u /var/www/html-static/api/system_runner.py
Restart=always
RestartSec=3
StandardOutput=append:/var/log/mayordomo.log
StandardError=append:/var/log/mayordomo.log

# Security
NoNewPrivileges=false
PrivateTmp=false

[Install]
WantedBy=multi-user.target
